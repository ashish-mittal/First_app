<h1>Editing user</h1>
<%= form_for @user do |f|%>
	<% if @user.errors.any? %>
	<div class="error_messages">  
      <h2>Form is invalid</h2>  
      <ul>  
        <% for message in @user.errors.full_messages %>  
          <li><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>
   <p>  
    <%= f.label :username %><br />  
    <%= f.text_field :username %>  
  </p>    
  <p>  
    <%= f.label :dob %> <br />  
    <%=  f.date_select(:dob,:start_year => 1960)%>  
  </p>  
   <p>  
    <%= f.label :picture  %> <br />  
    <%= f.file_field :picture %> 
  </p>  
  <p class="button"><%= f.submit "Update" %></p>  
<% end %>  
